@write foreign fn (i32, *i8, word) -> i32

@main global fn unit -> unit
    %0 = imm i32 64
    %1 = call @add (%0, 3)

    call @write (1, ref %1, 1)
    call @write (1, ref @hello_str, 15)

    ret
end

@add fn (i32, i32) -> i32
    %2 = add %0 %1
    ret %2
end

@add fn i32 -> i32
    ret %1
end

@hello_str [15 x i8] "hello, world.\n\0"
